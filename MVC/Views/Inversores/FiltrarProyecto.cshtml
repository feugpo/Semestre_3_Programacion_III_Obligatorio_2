

@model IEnumerable<Dominio.Proyecto>

@{
    ViewBag.Title = "FiltrarProyecto";
}

<h2>FiltrarProyecto</h2>


<form class="form-signin" method="post">


    <label for="cedula" class="sr-only">Cedula Inversor</label>
    <input type="text" id="cedula" class="form-control" placeholder="Cedula" name="cedula">
    <br>
    <label for="desde" class="sr-only">Rango de Fecha</label>
    <input type="date" id="desde" class="form-control" placeholder="Desde" name="desde">
    <input type="date" id="hasta" class="form-control" placeholder="Hasta" name="hasta">
    <br>
    <label for="motno" class="sr-only">Cedula Inversor</label>
    <input type="number" id="motno" class="form-control" placeholder="Monto" name="monto">
    <br>
    <label for="textoTitulo" class="sr-only">Cedula Inversor</label>
    <input type="text" id="textoTitulo" class="form-control" placeholder="Texto dentro del titulo" name="textoTitulo">
    <br>
    <label for="textoDesc" class="sr-only">Cedula Inversor</label>
    <input type="text" id="textoDesc" class="form-control" placeholder="Texto dentro de la descripcion" name="textoDesc">
    <br>
    <button type="submit" class="btn btn-primary">Filtrar</button>

</form>




<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MontoTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MontoTotalConInteres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MontoCuotas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cuotas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TasaInteres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoTotalConInteres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontoCuotas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuotas)
            </td>
            <td>
                <img src="/Imagenes/@Html.DisplayFor(modelItem => item.Imagen)" style="max-width:100%;width:auto;height:auto;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TasaInteres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                | @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
